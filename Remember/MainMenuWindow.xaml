<Window x:Class="Remember.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Remember"
        mc:Ignorable="d"
        Title="Remember" Height="350" Width="525">
    <Grid>
        <Button 
            x:Name="BtnStart" 
            Content="Start Game" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="75" 
            Margin="0,59,0,240" 
            Click="OnBtnStartClick"/>
        <TextBox x:Name="TxtBoxWidth" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" Margin="0,0,0,205"/>
        <TextBox x:Name="TxtBoxHeight" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="198,119,0,0"/>
        <Label x:Name="LblWidth" Content="Width:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="148,91,0,0"/>
        <Label x:Name="LblHeight" Content="Height:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="145,119,0,0"/>

    </Grid>
</Window>
